{
  "version": 2,
  "builds": [
    { "src": "/app.js", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/app.js",
      "methods": ["GET"]
    },
    { "src": "/books", "dest": "/app.js", "methods": ["GET","POST", "DELETE", "PUT"]},
    { "src": "/books/(.*)", "dest": "/app.js", "methods": ["GET","POST", "DELETE", "PUT"]}
  ],
  "env": {
    "MONGO_ADDRESS": "@mongo-address" 
  }
}
